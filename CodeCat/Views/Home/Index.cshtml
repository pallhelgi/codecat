@{
    ViewBag.Title = "Home Page";
}

@model CodeCat.Models.ApplicationUser

<!--LOGO-->
<img class="logo-frontpage" src="~/Images/kisi4.png" alt="CodeCat logo" />
<br />
<br />

<!--Program description-->
<div class="description">
    <p>
        The code editor where you can collaborate and pair program in <br />
        real-time with your best friends. <br />
        It's sort of like Git and Google Docs had procreated <br />
        and had a child.
    </p>
</div>
<br />

<!--SIGN IN og SIGN UP buttons-->
<div class="center-buttons">
    <!--Sign in button-->
    <span class="sign-in-button">
        <a href="@Url.Action("../Account/Login")" class="btn btn-fab sign-popup" id="btn-fab">
            Sign in
        </a>
    </span>
    <!--Sign up button-->
    <span class="sign-up-button">
        <a href="@Url.Action("../Account/Register")" class="btn btn-fab sign-popup">
            Register
        </a>
    </span>
</div>
